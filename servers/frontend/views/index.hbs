    <title>Amazing_Job_Finder</title>
</head>

<body>
    <header>
        <nav>
            <a href="/login">
                <span class="login">
                    Log in
                </span>
            </a>
            <div class="whitetext">
                <a href="/signup">
                    <span class="signupbox">
                        Sign up
                    </span>
                </a>
            </div>
            <a href="/logout">
                <span class="logout">
                    Log out
                </span>
            </a>

        </nav>

        <h1>If you can dream it, you can do it.</h1>

        <div class="headerwrapper">
            <div class="headerbox" id="headerbox">
                <div class="tagswrapper">
                    <div class="tags">
                        <div class="active">
                            <button class="activetag" id="search-button">
                                Search
                            </button>
                        </div>
                        <div class="inactive">
                            <button class="inactivetag" id="post-button">
                                Post
                            </button>
                        </div>
                    </div>
                </div>
                <div class="searchjobs" id="searchjobs">
                    <div class="highlighted_area">
                        <div class="inputwrapper">
                            <div class="inputform">
                                <form action="/searchjobs" , method="get">
                                    <input type="text" id="searchbox" name="searchbox" size="20" maxlength="20"
                                        placeholder="Enter job title" />
                                    <input type="text" id="zips" name="zips" size="5" maxlength="10"
                                        placeholder="City/Zip Code" />
                                    <input type="submit" id="submit" value="Search Jobs" />
                                </form>
                            </div>
                        </div>

                        <div class="queryboxeswrapper">
                            <div class="queryboxes">
                                <button class="querybox" , onclick="">Latest</button>
                                <button class="querybox" , onclick="">
                                    Most Popular
                                </button>
                                <button class="querybox" , onclick="">For You</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="postjobs" id="postjobs">
                    <div class="highlighted_area">
                        <div class="inputwrapper">
                            <div class="inputform">
                                <form action="/postpopup" method="post" id="postform">
                                    <input id="postlisting" type="text" name="title" size="20" maxlength="20"
                                        placeholder="Listing title" />
                                    <input id="postjob" type="button" value="Post job" class="btn btn-primary"
                                        data-bs-toggle="modal" data-bs-target="#postModal" style="padding: 0" />
                                    <br>
                                    <div class="queryboxwrapper">
                                        <div class="queryboxes">
                                            <select name="category" id="category">
                                                <option value="Web developer" selected>
                                                    Web developer
                                                </option>
                                                <option value="Software engineer">
                                                    Software engineer
                                                </option>
                                                <option value="DevOps engineer">DevOps engineer</option>
                                                <option value="Cybersecurity engineer">
                                                    Cybersecurity engineer
                                                </option>
                                                <option value="System Administrator">
                                                    System Administrator
                                                </option>
                                            </select>
                                            <select name="onsite" id="onsite">
                                                <option value="On-site" selected>
                                                    On-site
                                                </option>
                                                <option value="Hybrid">Hybrid</option>
                                                <option value="Remote">Remote</option>
                                            </select>
                                            <select name="hours" id="hours">
                                                <option value="Full time" selected>
                                                    Full time
                                                </option>
                                                <option value="Part time">Part time</option>
                                                <option value="Flexible">Flexible</option>
                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!--Bootstrap modals-->
            <!-- Post Modal -->
            <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="postModalLabel">
                                <p id="postlistingtitle">Listing Title</p>
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="wrapper">
                                <div class="firstcol">
                                    <p>Description</p>
                                    <div class="textarea">
                                        <textarea name="longdescription" id="longdescription" rows="12"
                                            cols="50"></textarea>
                                    </div>
                                    <div class="contactinfo">
                                        <p>Contact Information</p>
                                        <span>Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" id="email"
                                                class="contactinputs"></span><br>
                                        <span>Tel: +30&nbsp;&nbsp;<input type="text" id="telephone"
                                                class="contactinputs"></span><br>
                                        <span>Website:<input type="text" id="website" class="contactinputs"></span>
                                    </div>
                                </div>
                                <div class="secondcol"></div>
                                <div class="thirdcol">
                                    <div class="category">
                                        <p>Category</p>
                                        <select name="category" id="popupcategory">
                                            <option value="Web developer" selected>
                                                Web developer
                                            </option>
                                            <option value="Software engineer">
                                                Software engineer
                                            </option>
                                            <option value="DevOps engineer">DevOps engineer</option>
                                            <option value="Cybersecurity engineer">
                                                Cybersecurity engineer
                                            </option>
                                            <option value="System Administrator">
                                                System Administrator
                                            </option>
                                        </select>
                                    </div>
                                    <div class="type">
                                        <p>Type</p>
                                        <select name="hours" id="popuptype">
                                            <option value="Full time" selected>
                                                Full time
                                            </option>
                                            <option value="Part time">Part time</option>
                                            <option value="Flexible">Flexible</option>
                                        </select>
                                    </div>
                                    <div class="Location">
                                        <p>Location</p>
                                        <input type="text" class="locationbox" id="popuplocation">
                                    </div>
                                    <div class="onsite">
                                        <p>On-site/Remote</p>
                                        <select name="onsite" id="popuponsite">
                                            <option value="On-site" selected>On-site</option>
                                            <option value="Hybrid">Hybrid</option>
                                            <option value="Remote">Remote</option>
                                        </select>
                                    </div>
                                    <div class="salary">
                                        <p>Salary (range):</p>
                                        <input type="text" class="salarybox" id="popupsalary">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" id="listingButton" class="btn btn-primary">Create Listing</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModal" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="empty"></div>
                            <h5 class="modal-title" id="searchModal">
                                <p id="searchpopuplistingtitle">Listing Title</p>
                                <p id="searchpopupcompanyname">Company Name</p><img alt="Qries" src="./images/facebook" width="40"
                                    height="40" />
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="searchwrapper">
                                <div class="firstcol">
