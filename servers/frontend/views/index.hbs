                            <button type="button" id="applicationButton" class="btn btn-primary">Apply Now</button>
                        </div>
                    </div>
                </div>
            </div>
    </header>

    <br>

    <main>
        <div class="mainwrapper">
            <div class="dummy"></div>
            <div class="recents">
            </div>
            <div class="dummy_two"></div>
            <!-- Either a popup menu or a dropdown checkbox list with filters list -->
            <div class="filters"><button class="whitetext" onclick="">filters</button></div>
            <div class="dummy_three"></div>
        </div>
        <br>
        <article>
            <div class="articles">
                {{#each data.mainpagelistings}}
                <div class="listing">
                    <div class="wrapper">
                        <div class="info">
                            <h3 class="title" id="mainlistingtitle{{this.id}}">{{this.title}}</h3>
                            <h5 class="workhours" id="mainlistinghours{{this.id}}">{{this.hours}} - {{this.onsite}}</h5>
                        </div>
                        <div class="totheleft">
                            <div class="logo"></div>
                            <div class="companyname">
                                <p id="mainlistingcompname{{this.id}}">{{this.company}}</p>
                            </div>
                            <div class="location">
                                <p id="mainlistinglocation{{this.id}}">{{this.location}}</p>
                            </div>
                        </div>
                        <p class="content" id="mainlistingdescription{{this.id}}">
                            {{this.description}}
                        </p>
                        <div class="hidden" style="display: none;">
                            <p id="mainlistingbigdescription{{this.id}}">{{this.bigdescription}}</p>
                            <p id="mainlistingcategory{{this.id}}">{{this.category}}</p>
                            <p id="mainlistingonsite{{this.id}}">{{this.onsite}}</p>
                            <p id="mainlistingsalary{{this.id}}">{{this.salary}}</p>
                        </div>
                        <p class="postedat" id="mainlistingpostdate{{this.id}}">{{this.postdate}}</p>
                        <input type="button" id="{{this.id}}" value="Test" class="btn btn-primary"
                            data-bs-toggle="modal" data-bs-target="#searchModal" style="display: none;">
                    </div>
                </div>
                {{/each}}
            </div>
        </article>

        <br>
        <br>
        <br>

        <div class="flexwrapper">
            <div class="sponsors">
                <p>Our top sponsors:</p>
            </div>
        </div>
        <!-- Carousel wrapper -->
        <div class="flexwrapper">
            <div id="sponsorsCarousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {{#each data.sponsors}}
                    {{#if this.top}}
                    <div class="carousel-item active" data-bs-interval="5000">
                        <img src="{{this.src}}" class="d-block w-100" alt="{{this.alt}}">
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>
                    {{^}}
                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="{{this.src}}" class="d-block w-100" alt="{{this.alt}}">
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </main>

